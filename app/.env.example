# Database
DATABASE_URL="file:./dev.db"

# NextAuth Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-super-secret-key-here-min-32-chars"

# API Keys
ABACUSAI_API_KEY="your-abacus-ai-api-key"
OPENAI_API_KEY="your-openai-api-key"
RESEND_API_KEY="your-resend-api-key"

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes in milliseconds
RATE_LIMIT_MAX_ATTEMPTS=5    # Maximum login attempts per window
SESSION_TIMEOUT_MINUTES=30   # Session timeout in minutes
MAX_FILE_SIZE_MB=50         # Maximum file upload size in MB
BCRYPT_ROUNDS=12            # BCrypt hashing rounds (10-12 recommended)

# Environment
NODE_ENV="development"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Security Headers
CSP_NONCE_SECRET="your-csp-nonce-secret-key"

# File Upload
UPLOAD_VIRUS_SCAN_ENABLED=false  # Set to true in production
UPLOAD_MAX_FILES_PER_USER=100
UPLOAD_ALLOWED_EXTENSIONS=".jpg,.jpeg,.png,.webp,.mp4,.webm,.ogg"

# Database Security
DB_CONNECTION_LIMIT=10
DB_QUERY_TIMEOUT_MS=30000

# Monitoring
ENABLE_SECURITY_LOGGING=true
LOG_LEVEL="info"
